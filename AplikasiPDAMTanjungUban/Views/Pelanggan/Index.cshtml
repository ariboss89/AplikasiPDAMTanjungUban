<html lang="en">

@model AplikasiPDAMTanjungUban.ViewModel.PelangganVM

<body>
    <div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6 align-self-center">
                            <div class="left-content show-up header-text wow fadeInLeft">
                                <form method="post" class="">
                                    <div class="row p-3 border">

                                        <input id="txtId" type="hidden" asp-for="@Model.Pelanggan.Id" />

                                        <div asp-validation-summary="ModelOnly"></div>

                                        <div class="col-12 pt-4">
                                            <div class="form-group row">
                                                <div class="col-4">
                                                    <label style="font-weight:bold" asp-for="Pelanggan.IdPelanggan"></label>
                                                </div>
                                                <div class="col-8">
                                                    <input id="txtPelanggan" style="text-align:center" asp-for="Pelanggan.IdPelanggan" class="form-control" />
                                                    <span asp-validation-for="Pelanggan.IdPelanggan" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row mt-2">
                                                <div class="col-4">
                                                    <label style="font-weight:bold" asp-for="Pelanggan.Nama"></label>
                                                </div>
                                                <div class="col-8">
                                                    <input id="txtNama" style="text-align:center" asp-for="Pelanggan.Nama" class="form-control" />
                                                    <span asp-validation-for="Pelanggan.Nama" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group row mt-2">
                                                <div class="col-4">
                                                    <label style="font-weight:bold" asp-for="Pelanggan.Alamat"></label>
                                                </div>
                                                <div class="col-8">
                                                    <textarea id="txtAlamat" row="3" style="text-align:center" asp-for="Pelanggan.Alamat" class="form-control"></textarea>
                                                    <span asp-validation-for="Pelanggan.Alamat" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group row mt-2">
                                                <div class="col-4">
                                                    <label style="font-weight:bold" asp-for="Pelanggan.Kontak"></label>
                                                </div>
                                                <div class="col-8">
                                                    <input id="txtKontak" style="text-align:center" asp-for="Pelanggan.Kontak" class="form-control" />
                                                    <span asp-validation-for="Pelanggan.Kontak" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group mt-2 mb-2 row">
                                                <div style="font-weight:bold" class="col-4">
                                                    Golongan
                                                </div>
                                                <div class="col-8">

                                                    <select id="cbKategori" style="text-align:center" asp-for="@Model.Pelanggan.Kategori" asp-items="@Model.ListGolongan" class="btn btn-primary form-select border-0 shadow">
                                                        <option disabled selected>Pilih Golongan</option>
                                                    </select>

                                                    <span asp-validation-for="Pelanggan.Kategori" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-8 offset-4">

                                                    <div class="row">
                                                        <div class="col-4">
                                                            <input id="btnSave" type="submit" value="Add" style="background-color:lightskyblue; font-weight: bold; color: white;" class="btn form-control" />
                                                        </div>
                                                        <div class="col-4">
                                                            <input id="btnEdit" disabled="disabled" type="button" value="Edit" onclick="Edit()" style="background-color: limegreen; font-weight: bold; color: white;" class="btn form-control" />
                                                        </div>
                                                        <div class="col-4">
                                                            <input id="btnDelete" disabled="disabled" type="button" value="Delete" onclick="Delete()" style="font-weight:bold; background-color:red; color:white;" class="btn form-control"/>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                                <div class="p-2 border rounded" style="text-align:center;">
                                    <table onclick="SelectData()" id="tblData" class="table table-striped table-bordered" style="width:100%; padding-top:10px">
                                        <thead class="thead-dark">
                                            <tr style="background-color: white">

                                                <th class="text-center">Id</th>
                                                <th class="text-center">Pelanggan</th>
                                                <th class="text-center">Kontak</th>
                                                <th class="text-center">Alamat</th>
                                                <th class="text-center">Golongan</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

@section Scripts{
    <script src="~/js/Pelanggan.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
</head>
<body>

    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header id="navBar" class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a class="logo">
                            <img src="~/images/logo.png" alt="Chain App Dev">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">

                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="Index" class="">Home</a></li>
                            <li class="scroll-to-section"><a href="#newsletter">About</a></li>

                            @if (StaticDetails.Role.Equals("Superadmin"))
                            {
                                <li class="scroll-to-section"><a asp-action="Index" asp-controller="Pelanggan">Pelanggan</a></li>
                                <li class="scroll-to-section"><a asp-action="Index" asp-controller="Tarif">Tarif</a></li>
                                <li class="scroll-to-section"><a asp-action="Index" asp-controller="Pembayaran">Pembayaran</a></li>
                                <li style="font-weight:bold" class="scroll-to-section"><a asp-action="Index" asp-controller="Laporan">Laporan</a></li>
                                <li><div class="gradient-button"><a asp-action="Logout" asp-controller="Home"><i class="fa fa-sign-in-alt"></i> Log out</a></div></li>
                            }
                            else if (StaticDetails.Role.Equals("Admin"))
                            {
                                <li class="scroll-to-section"><a asp-action="Index" asp-controller="Pelanggan">Pelanggan</a></li>
                                <li class="scroll-to-section"><a asp-action="Index" asp-controller="Pembayaran">Pembayaran</a></li>
                                <li style="font-weight:bold" class="scroll-to-section"><a asp-action="Index" asp-controller="Laporan">Laporan</a></li>
                                <li><div class="gradient-button"><a asp-action="Logout" asp-controller="Home" id="modal_trigger"><i class="fa fa-sign-in-alt"></i> Log out</a></div></li>
                            }
                            else
                            {
                                <li><div class="gradient-button"><a id="modal_trigger" href="#modal"><i class="fa fa-sign-in-alt"></i> Log In Now</a></div></li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <div id="modal" class="popupContainer" style="display:none;">
        <div class="popupHeader">
            <span class="header_title">Login</span>
            <span class="modal_close"><i class="fa fa-times"></i></span>
        </div>

        <section class="popupBody">
            <!-- Social Login -->
            <div class="social_login">
                <div class="action_btns">
                    @*<div class="one"><a href="#" id="login_form" class="btn">Login</a></div>*@
                    @*<div class="one_half last"><a href="#" id="register_form" class="btn">Sign up</a></div>*@
                </div>

                <div class="action_btns">
                    <form>
                        <div style="display:flex;flex-direction:column;margin-bottom:10px">

                            <div>
                                <label>Email / Username</label>
                                <input id="txtUsername" class="col-lg-12" type="text" />
                                <span class="text-danger"></span>
                                <br />
                            </div>
                            <div style="margin-top:10px;">
                                <label>Password</label>
                                <input id="txtPassword" class="col-lg-12" type="password" />
                                <span class="text-danger"></span>
                                <br />
                            </div>
                        </div>

                        <div class="action_btns">
                            @*<div class="one_half_last"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>*@
                            <div class="one">

                                <input onclick="Login()" value="Login" class="btn btn_red" />

                            </div>
                        </div>
                    </form>
                </div>

            </div>

            <!-- Username & Password Login form -->
            <div class="user_login">
                <form>
                    <label>Email / Username</label>
                    <input type="text" />
                    <br />

                    <label>Password</label>
                    <input type="password" />
                    <br />

                    @*<div class="checkbox">
                            <input id="remember" type="checkbox" />
                            <label for="remember">Remember me on this computer</label>
                        </div>*@

                    <div class="action_btns">
                        <div class="one_half"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>
                        <div class="one_half last"><a href="#" class="btn btn_red">Login</a></div>
                    </div>
                </form>

                <a href="#" class="forgot_password">Forgot password?</a>

            </div>

            <!-- Register Form -->
            @*<div class="user_register">
                    <form>
                        <label>Full Name</label>
                        <input type="text" />
                        <br />

                        <label>Email Address</label>
                        <input type="email" />
                        <br />

                        <label>Password</label>
                        <input type="password" />
                        <br />

                        <div class="checkbox">
                            <input id="send_updates" type="checkbox" />
                            <label for="send_updates">Send me occasional email updates</label>
                        </div>

                        <div class="action_btns">
                            <div class="one_half"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>
                            <div class="one_half last"><a href="#" class="btn btn_red">Register</a></div>
                        </div>
                    </form>
                </div>*@
        </section>
    </div>

    <div class="container">
        <main role="main" class="pb-3 mt-10">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer id="newsletter">
        <div id="divFooter" class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="section-heading">
                        <h4>PDAM TIRTA KEPRI CABANG TANJUNG UBAN</h4>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="footer-widget">
                        <h4>Contact Us</h4>
                        <p>Jl. Bhakti Praja, Tj. Uban Kota, Kec. Bintan Utara, Kabupaten Bintan, Kepulauan Riau 29152</p>
                        <p><a href="#">0771-020-0340</a></p>
                        <p><a href="#">pdamtanjunguban@kepri.com</a></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="footer-widget">
                        <h4>About Us</h4>
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Services</a></li>
                            <li><a href="#">About</a></li>

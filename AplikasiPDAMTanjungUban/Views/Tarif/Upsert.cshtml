@model Tarif


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<body>
    <div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 align-self-center">
                    <div class="left-content show-up header-text wow fadeInLeft">
                        <form method="post" class="custom-form mb-lg-0 mb-5">
                            <div class="row p-3 border">

                                <input type="hidden" asp-for="@Model.Id" />

                                <div asp-validation-summary="ModelOnly"></div>

                                <div class="col-12 pt-4">
                                    <div class="row" style="padding-bottom:20px;">
                                        <div class="form-group row mt-2">
                                            <div class="col-4">
                                                <label style="font-weight:bold">Golongan</label>
                                            </div>
                                            <div class="col-8">
                                                @Html.DropDownListFor(m => m.Kategori, new List<SelectListItem>
                                                {
                                                    new SelectListItem{Text="Sosial Umum", Value = "Sosial Umum"},
                                                    new SelectListItem{Text="Sosial Khusus", Value = "Sosial Khusus"},
                                                    new SelectListItem{Text="Rumah Tangga", Value = "Rumah Tangga"},
                                                    new SelectListItem{Text="Instansi Pemerintah/ Polri/ Abri", Value = "Instansi Pemerintah/ Polri/ Abri"},
                                                     new SelectListItem{Text="Niaga Kecil", Value = "Niaga Kecil"},
                                                      new SelectListItem{Text="Niaga Besar", Value = "Niaga Besar"},
                                                       new SelectListItem{Text="Industri", Value = "Industri"},
                                                        new SelectListItem{Text="Khusus", Value = "Khusus"}

                                                }, "Pilih Type", new { id = "cbProgram", @class = "btn form-select", @style = "background-color:light-blue; color:white" })

                                                @Html.ValidationMessageFor(m => @Model.Kategori, "", new { @style = "color:red" })


                                            </div>
                                        </div>

                                        <div class="form-group row mt-2">
                                            <div class="col-4">
                                                <label style="font-weight:bold" asp-for="Biaya010"></label>
                                            </div>
                                            <div class="col-8">
                                                <input style="text-align:center" asp-for="Biaya010" class="form-control" />
                                                <span asp-validation-for="Biaya010" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row mt-2">
                                            <div class="col-4">
                                                <label style="font-weight:bold" asp-for="Biaya1120"></label>
                                            </div>
                                            <div class="col-8">
                                                <input row="3" style="text-align:center" asp-for="Biaya1120" class="form-control" />
                                                <span asp-validation-for="Biaya1120" class="text-danger"></span>
                                            </div>
                                        </div>


                                        <div class="form-group row mt-2">
                                            <div class="col-4">
                                                <label style="font-weight:bold" asp-for="Biaya2130"></label>
                                            </div>
                                            <div class="col-8">
                                                <input row="3" style="text-align:center" asp-for="Biaya2130" class="form-control" />
                                                <span asp-validation-for="Biaya2130" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row mt-2">
                                            <div class="col-4">
                                                <label style="font-weight:bold" asp-for="Biaya30"></label>
                                            </div>
                                            <div class="col-8">
                                                <input row="3" style="text-align:center" asp-for="Biaya30" class="form-control" />
                                                <span asp-validation-for="Biaya30" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group row mt-2">
                                            <div class="col-8 offset-4">
                                                @if (Model.Id != 0)
                                                {
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <input type="submit" value="Edit" style="color:white;" class="btn btn-primary form-control" />
                                                        </div>
                                                        <div class="col-6">
                                                            <a asp-action="Index" style="font-weight:bold;background-color:grey; color:white;" class="btn form-control"> Back</a>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <input type="submit" value="Tambah" style="font-weight: bold; color: white;" class="btn btn-primary form-control" />
                                                        </div>
                                                        <div class="col-6">
                                                            <a asp-action="Index" style="background-color:grey; font-weight:bold; color:white;" class="btn form-control"> Back</a>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
